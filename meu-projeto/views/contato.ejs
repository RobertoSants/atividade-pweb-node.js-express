<!DOCTYPE html>
<html lang="pt-br">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
  <title><%= title %></title>
  <link rel="stylesheet" href="/stylesheets/style.css">

  <!-- Estilos visuais básicos -->
  <style>
    body {
      font-family: Arial, sans-serif;
      margin: 2rem;
      line-height: 1.5;
    }

    h1 {
      color: #2c3e50;
      margin-bottom: 1.5rem;
    }

    form {
      max-width: 600px;
    }

    .field {
      margin-bottom: 1.2rem;
    }

    .field input,
    .field select,
    .field textarea {
      width: 100%;
      max-width: 500px;
      padding: 8px;
      border: 1px solid #ccc;
      border-radius: 5px;
      font-size: 1rem;
    }

    .error {
      color: #b00020;
      font-size: 0.95em;
      margin-top: 4px;
    }

    button {
      background-color: #2c7a7b;
      color: white;
      border: none;
      padding: 10px 16px;
      border-radius: 5px;
      cursor: pointer;
    }

    button:hover {
      background-color: #285e61;
    }

    fieldset {
      border: 1px solid #ccc;
      padding: 1rem;
      border-radius: 5px;
    }

    legend {
      font-weight: bold;
    }
  </style>
</head>
<body>
  <h1><%= title %></h1>

  <!-- Formulário principal -->
  <form method="post" action="/contato" novalidate>
    <!-- Token CSRF obrigatório -->
    <input type="hidden" name="_csrf" value="<%= csrfToken %>">

    <!-- Campo Nome -->
    <div class="field">
      <label for="nome">Nome*</label>
      <input id="nome" name="nome" type="text"
        required minlength="3" maxlength="60"
        pattern="[A-Za-zÀ-ÖØ-öø-ÿ' -]+"
        title="Use apenas letras, espaços, apóstrofo e hífen."
        value="<%= data.nome || '' %>">
      <% if (errors.nome) { %><div class="error"><%= errors.nome.msg %></div><% } %>
    </div>

    <!-- Campo E-mail -->
    <div class="field">
      <label for="email">E-mail*</label>
      <input id="email" name="email" type="email"
        required title="Digite um e-mail válido."
        value="<%= data.email || '' %>">
      <% if (errors.email) { %><div class="error"><%= errors.email.msg %></div><% } %>
    </div>

    <!-- Campo Telefone -->
    <div class="field">
      <label for="telefone">Telefone (opcional)</label>
      <input id="telefone" name="telefone" type="tel"
        pattern="\d{10,11}"
        title="Informe apenas números (DDD + número, ex: 82999999999)."
        value="<%= data.telefone || '' %>">
      <% if (errors.telefone) { %><div class="error"><%= errors.telefone.msg %></div><% } %>
    </div>

    <!-- Campo Idade -->
    <div class="field">
      <label for="idade">Idade (opcional)</label>
      <input id="idade" name="idade" type="number"
        min="1" max="120"
        title="Se informado, deve estar entre 1 e 120."
        value="<%= data.idade || '' %>">
      <% if (errors.idade) { %><div class="error"><%= errors.idade.msg %></div><% } %>
    </div>

    <!-- Campo Gênero -->
    <div class="field">
      <label for="genero">Gênero</label>
      <select id="genero" name="genero">
        <option value="" <%= data.genero === '' ? 'selected' : '' %>>Selecione...</option>
        <option value="feminino" <%= data.genero === 'feminino' ? 'selected' : '' %>>Feminino</option>
        <option value="masculino" <%= data.genero === 'masculino' ? 'selected' : '' %>>Masculino</option>
        <option value="nao-binario" <%= data.genero === 'nao-binario' ? 'selected' : '' %>>Não-binário</option>
        <option value="prefiro-nao-informar" <%= data.genero === 'prefiro-nao-informar' ? 'selected' : '' %>>Prefiro não informar</option>
      </select>
      <% if (errors.genero) { %><div class="error"><%= errors.genero.msg %></div><% } %>
    </div>

    <!-- Interesses -->
    <fieldset class="field">
      <legend>Interesses</legend>
      <% const all = ['node','express','ejs','frontend','backend']; %>
      <% all.forEach(opt => { %>
        <label>
          <input type="checkbox" name="interesses" value="<%= opt %>"
            <%= (Array.isArray(data.interesses) && data.interesses.includes(opt)) ? 'checked' : '' %>>
          <%= opt.toUpperCase() %>
        </label><br>
      <% }) %>
      <% if (errors.interesses) { %><div class="error"><%= errors.interesses.msg %></div><% } %>
    </fieldset>

    <!-- Mensagem -->
    <div class="field">
      <label for="mensagem">Mensagem*</label>
      <textarea id="mensagem" name="mensagem" rows="5"
        required minlength="10" maxlength="500"
        title="A mensagem deve ter entre 10 e 500 caracteres."><%= data.mensagem || '' %></textarea>
      <% if (errors.mensagem) { %><div class="error"><%= errors.mensagem.msg %></div><% } %>
    </div>

    <!-- Checkbox dos termos -->
    <div class="field">
      <label>
        <input type="checkbox" name="aceite"
          required <%= data.aceite ? 'checked' : '' %>>
        Concordo com os termos de uso*
      </label>
      <% if (errors.aceite) { %><div class="error"><%= errors.aceite.msg %></div><% } %>
    </div>

    <!-- Campo Senha (mantido apenas como exemplo didático) -->
    <div class="field">
      <label for="senha">Senha</label>
      <input id="senha" name="senha" type="password"
        minlength="8" maxlength="64"
        title="A senha deve ter entre 8 e 64 caracteres.">
      <% if (errors.senha) { %><div class="error"><%= errors.senha.msg %></div><% } %>
    </div>

    <!-- Botão principal -->
    <button type="submit">Enviar</button>
  </form>

  <!-- Foco automático no primeiro erro -->
  <script>
    document.addEventListener("DOMContentLoaded", () => {
      const firstError = document.querySelector(".error");
      if (firstError) {
        const input = firstError.closest(".field")?.querySelector("input, textarea, select");
        if (input) input.focus();
      }
    });
  </script>
</body>
</html>